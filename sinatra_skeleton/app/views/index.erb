 <!doctype html>
<html lang="en">
<head>
  <meta charset="utf8">
</head>
<p> Logged-in User: <strong><%= @user.name if @user %></strong> </p>
  <ul class = "nav">
    <li><a href="/form">new</li></a>
    <li><a href="/login">login</li></a>
    <li><a href="/register">register</li></a>
  </ul>
  <br><br>
  <h1>Posts</h1>
  <table>
    <% @post.each do |post| %>
    <tr>
      <a href="/posts/<%=post.id%>">
        <%= post.text %>
      </a>
      <a href="/comment/<%= post.id%>">---comment
      </a><br>
      <% post.comments.each do |comment| %>
        <%= comment.text %><br>
      <% end %>
    </tr> <br>
    <% end %>
  </table>
 
